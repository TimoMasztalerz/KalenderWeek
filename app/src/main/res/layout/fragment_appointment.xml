        android:id="@+id/time_0000"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="00:00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/time_0100"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_0100"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="01:00"
        app:layout_constraintTop_toBottomOf="@+id/time_0000"
