        android:id="@+id/time_0200"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="02:00"
        app:layout_constraintTop_toBottomOf="@+id/time_0100"
        app:layout_constraintBottom_toTopOf="@+id/time_0300"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent" />

